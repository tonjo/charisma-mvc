    <!-- The styles -->
    {# !!! IMPORTANT !!!
        With mod_rewrite enabled in included .htaccess CSS link href needs absolute paths
    #}

    <link id="bs-css" href="{{ constant('URL') }}public/css/bootstrap-cerulean.min.css" rel="stylesheet">

