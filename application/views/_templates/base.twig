<script src="{{ constant('URL') }}bower_components/responsive-tables/responsive-tables.js"></script>
<!-- tour plugin -->
<script src="{{ constant('URL') }}bower_components/bootstrap-tour/build/js/bootstrap-tour.min.js"></script>
