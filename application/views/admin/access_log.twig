{% extends '_templates/base.twig' %}
{# {% set breadcrumbs = ['Gestione','Log accessi'] %} #}

{% block leftmenu %}
    {% include "_templates/leftmenu_management.twig" %}
{% endblock leftmenu %}

{% block content %}

<div class="center col-md-10 col-md-offset-1 well well-sm">
    <h4>Ultimi {{ Nlogs }} accessi (il pi√π recente per primo)</h4>
</div>

<div class="col-lg-12 col-md-12">
{% if logs %}
    <table class="table table-striped table-bordered">

    <thead>
        <th>Email utente</th>
        <th>Indirizzo IP</th>
        <th>Login</th>
        <th>Logout</th>
    </thead>

    <tbody>
    {% for log in logs %}
        <tr>
            <td>{{ log.user_email }}</td>
            <td>{{ log.from_ip }}</td>
            <td>{{ log.last_login }}</td>
            <td>{{ log.last_logout }}</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% else %}
    <div class="col-md-8 col-md-offset-2 alert alert-warning">
        Nessun log trovato
    </div>
{% endif %}

{% endblock content %}
